{
    "name": "Reading extension",
    "version": "1.1",
    "manifest_version": 3,
    "description": "Reads text from the page (preview, edit, TTS)",
    "permissions": [
        "scripting",
        "storage",
        "tts"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "action": {},
    "background": {
        "service_worker": "background.js"
    }
}